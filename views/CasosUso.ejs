	<script>
		document.addEventListener('DOMContentLoaded', async () => {
			fillCasosUsoTableWithAirtable(<%- proyecto.id_proyecto %>)
			const proyectoData = JSON.parse(localStorage.getItem(`proyecto_${<%- proyecto.id_proyecto %>}`));
			const complejidadesList = [];
			<% for (let i=0; i<complejidades.length; i++){ %>
				complejidadesList.push({id_tarea: '<%- complejidades[i].id_tarea %>', id_casoUso: '<%- complejidades[i].id_casoUso %>', nivel: '<%- complejidades[i].complejidad_caso %>'});
			<% } %>
			const estimaciones = await tiempoEstimado(complejidadesList, <%- proyecto.id_proyecto %>, proyectoData.integrantes);
			proyectoData['estimaciones'] = estimaciones;
			localStorage.setItem(`proyecto_${<%- proyecto.id_proyecto %>}`, JSON.stringify(proyectoData));
		});
	</script>

	
