<%- include('./includes/head')%>

<body id="page-top">
	<div id="wrapper">
		<%- include('./includes/sidebar')%>
		<div class="d-flex flex-column" id="content-wrapper">
			<div id="content">
				<%- include('./includes/topbar')%>
				<header></header>
				<div class="container-fluid">
					<div class="row">
						<div class="col">
							<h3 class="text-dark mb-4">Conectar con Airtable&nbsp;</h3>
						</div>
					</div>
					<div class="row">
						<div class="col">
							<div class="card shadow mb-4">
								<div class="card-body">
									<p class="text-white-50 m-0">Aqui&nbsp;<br>Vienen<br>Las<br>Instrucciones</p>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="container">
					<form action="airtable" method="POST">
						<div class="row">
							<input type="hidden" name="_csrf" value="<%= //csrfToken %>" >
							<div class="col-md-6 justify-content-center">
								<div class="row">
									<div class="col d-flex justify-content-center">
										<label class="col-form-label">ID base</label>
									</div>
								</div>
								<div class="row">
									<div class="col d-flex justify-content-center">
										<input class="border rounded border-dark form-input" type="text" name="id_base">
									</div>
								</div>
							</div>
							<div class="col">
								<div class="row">
									<div class="col d-flex justify-content-center">
										<label class="col-form-label">User KEY</label>
									</div>
								</div>
								<div class="row">
									<div class="col d-flex justify-content-center">
										<input class="border rounded border-dark form-input" type="text" name="user_key">
									</div>
								</div>
							</div>
						</div>
					</form>
					<br>
					<br>
					<br>
					<input class="btn btn-primary centrado" type="submit" value="Guardar">
				</div>
			</div>
<%- include('./includes/footer')%>