<%- include('./includes/head')%>

<body id="page-top">
	<div id="wrapper">
		<%- include('./includes/sidebar')%>
		<!-- Todo excepto sidebar -->
		<div class="d-flex flex-column" id="content-wrapper">
			<!-- Contenido excepto footer -->
			<div id="content">
				<div class="container-fluid">
					
					<!-- Titulo y descripcion de dashboard -->
					<div class="row px-4 mt-3">
						<div class="col">
							<h3 class="text-dark mb-0">Tablero</h3>
							<p>Consulta tu desempe√±o a lo largo de los proyectos en los que has trabajado</p>
						</div>
					</div>
					
					<!-- Graficas generales -->
					<div class="row">
						<!-- Grafica avance de proyectos -->
						<div class="col-lg-7 col-xl-8">
							<div class="card shadow mb-4">
								<div class="card-header d-flex justify-content-between align-items-center">
									<h6 class="text-light font-weight-bold m-0">Avance mis proyectos</h6>
									<div class="dropdown no-arrow">
										<button class="btn btn-link btn-sm dropdown-toggle" aria-expanded="false" data-toggle="dropdown" type="button">
											<i class="fas fa-ellipsis-v text-gray-400"></i>
										</button>
										<!-- Dropdowns para las descargas de las graficas TODO-->
										<div class="dropdown-menu shadow dropdown-menu-right animated--fade-in bg-dark">
											<p class="text-center dropdown-header">Descargas</p>
											<a class="dropdown-item text-almostWhite" href="#">&nbsp;Descargar .png</a>
											<a class="dropdown-item text-almostWhite" href="#">&nbsp;Descargar .csv</a>
											<!-- <div class="dropdown-divider"></div>
											<a class="dropdown-item" href="#">&nbsp;Something else here</a> -->
										</div>
									</div>
								</div>
								<div class="card-body">
									<div class="chart-area" aria-valuemax="100">
										<canvas aria-valuemax="100" data-bss-chart="<%- bar_table %>"></canvas>
									</div>
								</div>
							</div>
						</div>

						<!-- Grafica tareas asignadas  -->
						<div class="col-lg-5 col-xl-4">
							<div class="card shadow mb-4">
								<div class="card-header d-flex justify-content-between align-items-center">
									<h6 class="text-white font-weight-bold m-0">Tareas asignadas</h6>
									<div class="dropdown no-arrow">
										<button class="btn btn-link btn-sm dropdown-toggle" aria-expanded="false" data-toggle="dropdown" type="button">
											<i class="fas fa-ellipsis-v text-gray-400"></i>
										</button>
										<div class="dropdown-menu shadow dropdown-menu-right animated--fade-in bg-dark text-almostWhite">
											<p class="text-center dropdown-header">Descargas</p>
											<a class="dropdown-item text-almostWhite" href="#">&nbsp;Descargar .png</a>
											<a class="dropdown-item text-almostWhite" href="#">&nbsp;Descargar .csv</a>
											<!-- <div class="dropdown-divider"></div>
											<a class="dropdown-item" href="#">&nbsp;Something else here</a> -->
										</div>
									</div>
								</div>
								<div class="card-body">
									<!-- Area del grafico -->
									<div class="chart-area">
										<canvas data-bss-chart="<%- donut_table %>"></canvas>
									</div>
									<!-- Bullets del significado de cada color -->
									<div class="text-center small mt-4">
										<span class="mr-2">
											<i class="fas fa-circle text-primary"></i>Pendientes
										</span>
										<span class="mr-2">
											<i class="fas fa-circle text-success"></i>&nbsp;Completadas
										</span>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
<%- include('./includes/footer')%>
