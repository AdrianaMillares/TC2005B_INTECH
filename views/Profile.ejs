<%- include('./includes/head')%>

<body id="page-top">
	<div id="wrapper">
		<%- include('./includes/sidebar')%>
		<!-- Todo excepto sidbar -->
		<div class="d-flex flex-column" id="content-wrapper">
			<!-- Contenido excepto footer -->
			<div id="content">
				<div class="container-fluid">
					<h3 class="text-dark mb-4">Perfil</h3>
					<!-- Contenido del perfil y titulo -->
					<div class="row mb-3">
						<div class="col-lg-4 mb-auto">
							<!-- Tarjeta con Estadísticas personales -->
							<div class="card shadow mb-4">
								<div class="card-header py-3">
									<h6 class="text-white font-weight-bold m-0">Estadísticas personales</h6>
								</div>
								<div class="card-body">
									<p class="large font-weight-bold fs-1">Proyectos Asignados <%- proyectosAsignados %>/<%- proyectosNatgas %>  </p>
									<div class="progress">
										<div class="progress-bar" role="progressbar" style="width: <%= (proyectosAsignados/proyectosNatgas)*100 %>%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
											<%= Math.round((proyectosAsignados/proyectosNatgas)*100) %>%
										</div>
									</div>
								</div>
							</div>
						</div>
						<!-- Columna con informacion de la cuenta -->
						<div class="col-lg-8">
							<!-- TODO Todo esto está escondido pero no sé si quieran ponerlo  -->
							<div class="row mb-3 d-none">
								<div class="col">
									<div class="card text-white bg-primary shadow">
										<div class="card-body">
											<div class="row mb-2">
												<div class="col">
													<p class="m-0">Peformance</p>
													<p class="m-0"><strong>65.2%</strong></p>
												</div>
												<div class="col-auto"><i class="fas fa-rocket fa-2x"></i></div>
											</div>
											<p class="text-white-50 small m-0"><i class="fas fa-arrow-up"></i>&nbsp;5%
												since last month</p>
										</div>
									</div>
								</div>
								<div class="col">
									<div class="card text-white bg-success shadow">
										<div class="card-body">
											<div class="row mb-2">
												<div class="col">
													<p class="m-0">Peformance</p>
													<p class="m-0"><strong>65.2%</strong></p>
												</div>
												<div class="col-auto"><i class="fas fa-rocket fa-2x"></i></div>
											</div>
											<p class="text-white-50 small m-0"><i class="fas fa-arrow-up"></i>&nbsp;5%
												since last month</p>
										</div>
									</div>
								</div>
							</div>
							<!-- Lo escondido acaba aquí  -->

							<!-- Contenedor para la tarjeta de configuración del usuario -->
							<div class="row">
								<div class="col">
									<!-- Tarjeta de configuración del usuario -->
									<div class="card shadow mb-3">
										<div class="card-header py-3">
											<p class="text-white m-0 font-weight-bold">Configuración del usuario</p>
										</div>
										<div class="card-body">
											<form>
												<div class="form-row">
													<div class="col">
														<div class="form-group">
															<label for="username">
																<strong>Nombre de usuario</strong>
															</label>
															<input class="form-control form-input bg-transparent" type="text" id="username" placeholder="user.name" name="username">
														</div>
													</div>
													<div class="col">
														<div class="form-group">
															<label for="email">
																<strong>Correo electrónico</strong><br>
															</label>
															<input class="form-control form-input bg-transparent" type="email" id="email" placeholder="user@example.com" name="email">
														</div>
													</div>
												</div>
												<div class="form-row">
													<div class="col">
														<div class="form-group">
															<label for="first_name">
																<strong>Nombre</strong><br>
															</label>
															<input class="form-control form-input bg-transparent" type="text" id="first_name" placeholder="John" name="first_name">
														</div>
													</div>
													<div class="col">
														<div class="form-group">
															<label for="last_name">
																<strong>Apellidos</strong><br>
															</label>
															<input class="form-control form-input bg-transparent" type="text" id="last_name" placeholder="Doe" name="last_name">
														</div>
													</div>
												</div>
												<div class="form-group">
													<button class="btn btn-primary btn-sm" type="submit">Guardar</button>
												</div>
											</form>
										</div>
									</div>
									<div class="card shadow"></div>
								</div>
							</div>

							<!-- Contenedor para cambiar contraseña -->
							<div class="row">
								<div class="col">
									<!-- Tarjeta para cambiar contraseña -->
									<div class="card shadow mb-4">
										<div class="card-header py-3">
											<h6 class="text-white m-0 font-weight-bold">Cambiar contraseña</h6>
										</div>
										<div class="card-body">
											<div class="row">
												<div class="col">
													<label for="first_name"><strong>Contraseña actual</strong><br></label>
													<input class="form-control form-input bg-transparent" type="text" id="first_name-1"
														placeholder="Contraseña actual" name="first_name">
												</div>
												<div class="col">
													<label for="first_name"><strong>Nueva contraseña</strong><br></label>
													<input class="form-control form-input bg-transparent" type="text" id="first_name-2"
														placeholder="Nueva contraseña" name="first_name">
												</div>
											</div>
											<p class="m-0"></p><button class="btn btn-primary btn-sm my-3"
												type="submit">Guardar</button>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
<%- include('./includes/footer')%>
