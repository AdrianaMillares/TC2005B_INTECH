<%- include('./includes/head')%>

<body id="page-top">
    <div id="wrapper">
        <%- include('./includes/sidebar')%>
        <div class="d-flex flex-column" id="content-wrapper">
            <div id="content">
                <div class="container-fluid">
                    <div class="row px-4 mt-3">
